@model LuanVan.Data.Manhthuongquan

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Xóa</h1>

<h3>Bạn có chắc chắn muốn xóa thông tin này?</h3>
<div>
    <h4>Người Dùng</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Họ tên
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HotenMtq)
        </dd>
        
        <dt class = "col-sm-2">
           Giới tính
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GioitinhMtq)
        </dd>
        <dt class = "col-sm-2">
            Đơn vị/tổ chức
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DonviTochucMtq)
        </dd>
        <dt class = "col-sm-2">
           Số điện thoại
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SdtMtq)
        </dd>
        <dt class = "col-sm-2">
           Đia chỉ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiachiMtq)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MaMtq" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Về danh sách</a>
    </form>
</div>
