@model IEnumerable<LuanVan.Data.HienVat>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenHv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donvitinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soluongcon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaLoaiNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenHv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Donvitinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soluongcon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaLoaiNavigation.MaLoai)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaHv">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaHv">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaHv">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
