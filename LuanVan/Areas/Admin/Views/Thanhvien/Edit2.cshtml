@model LuanVan.Data.Thanhvien

@{
    ViewData["Title"] = "Edit2";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}




<h1>Thông tin</h1>

<h4>Thành viên</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaTv" />
            <div class="form-group">
                <label asp-for="TenTv" class="control-label">Họ tên</label>
                <input asp-for="TenTv" class="form-control" />
                <span asp-validation-for="TenTv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GioitinhTv" class="control-label">Giới tính</label>
                <select asp-for="GioitinhTv" class="form-control">
                    <option value="Nam" selected="@((string)ViewBag.GioitinhTv == "Nam")">Nam</option>
                    <option value="Nữ" selected="@((string)ViewBag.GioitinhTv == "Nữ")">Nữ</option>
                </select>
                <span asp-validation-for="GioitinhTv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiachiTv" class="control-label">Địa chỉ</label>
                <input asp-for="DiachiTv" class="form-control" />
                <span asp-validation-for="DiachiTv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SdtTv" class="control-label">Số điện thoại</label>
                <input asp-for="SdtTv" class="form-control" />
                <span asp-validation-for="SdtTv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailTv" class="control-label">Email</label>
                <input asp-for="EmailTv" class="form-control" />
                <span asp-validation-for="EmailTv" class="text-danger"></span>
            </div>
            @if (Context.Session.GetInt32("idtv") == Model.MaTv)
            {
                <div class="form-group">
                    <label asp-for="MatkhauTv" class="control-label">Mật khẩu</label>
                    <input asp-for="MatkhauTv" class="form-control" />
                    <span asp-validation-for="MatkhauTv" class="text-danger"></span>
                </div>
            }




            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



<div>
    <a asp-action="Details" asp-route-id="@Context.Session.GetInt32("idtv")">Về trang thông tin chi tiết</a>
</div>