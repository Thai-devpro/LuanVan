@model LuanVan.Data.TtTraotang

@{
    ViewData["Title"] = "Xóa";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Xóa</h1>

<h3>Bạn có chắc muốn xóa?</h3>
<div>
    <h4>Thông tin trao tặng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Chiến dịch
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaCdNavigation.TenCd)
        </dd>
        <dt class="col-sm-2">
           Nơi tặng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ManoiNavigation.Diachi)
        </dd>
        <dt class="col-sm-2">
            Hiện vật
        </dt>
        <dd class="col-sm-10">

            @if (Model.MaHv == null)
            {
                <span>Hiện vât đã nhận của chiến dịch</span>
            }
            else
            {
                @Html.DisplayFor(model=> model.MaHvNavigation.TenHv)
            }
        </dd>
        <dt class="col-sm-2">
           Số lượng
        </dt>
        <dd class="col-sm-10">
            @if (Model.MaHv != null)
            {
                <span>
                    @Html.DisplayFor(model=> model.SoluongTt) <a style="color:black"> @Model.MaHvNavigation.Donvitinh</a>
                </span>
            }
            else
            {
                <span>Tất cả</span>
            }
        </dd>
        <dt class="col-sm-2">
           Người tặng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaTvNavigation.TenTv)
        </dd>
        
       
      
        <dt class = "col-sm-2">
            Ngày tặng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ngaytang)
        </dd>
        <dt class = "col-sm-2">
            Ảnh
        </dt>
        <dd class = "col-sm-10">
            <img src="@Url.Content("~/Content/images/traotang/"+Model.AnhTt)" width="100" height="80" style="margin-left:10px; border-radius:15px; border-style:outset " />
        </dd>
       
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MaTt" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Về danh sách</a>
    </form>
</div>
