@model LuanVan.Data.Chiendich

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Xóa</h1>

<h3>Bạn có chắc chắn muốn xóa?</h3>
<div>
    <h4>Chiến dịch</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Tên chiến dịch
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenCd)
        </dd>
        <dt class = "col-sm-2">
            Ngày bắt đầu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ngaybatdau)
        </dd>
        <dt class = "col-sm-2">
          Ngày kết thúc
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ngayketthuc)
        </dd>
        <dt class = "col-sm-2">
          Nội dung
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NoidungCd)
        </dd>
        <dt class = "col-sm-2">
            Ảnh chiến dịch
        </dt>
        <dd class = "col-sm-10">
            <img src="@Url.Content("~/Content/images/chiendich/"+Model.AnhCd)" width="100" height="80" style="margin-left:10px; border-radius:15px; border-style:outset " />
        </dd>
        
        <dt class = "col-sm-2">
           Người chịu trách nhiệm
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaTvNavigation.TenTv)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MaCd" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Về danh sách</a>
    </form>
</div>
