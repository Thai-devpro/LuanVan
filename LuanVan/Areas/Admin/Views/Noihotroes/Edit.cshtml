@model LuanVan.Data.Noihotro

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Cập nhật</h1>

<h4>Đề xuất nơi hỗ trợ</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Manoi" />
            <div class="form-group">
                <label asp-for="MaMtq" class="control-label">Người đề xuất</label>
                <select asp-for="MaMtq" class="form-control" asp-items="ViewBag.MaMtq"></select>
                <span asp-validation-for="MaMtq" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diachi" class="control-label">Địa chỉ</label>
                <input asp-for="Diachi" class="form-control" readonly/>
                <span asp-validation-for="Diachi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tinhtrang" class="control-label">Tình trạng</label>
                <input asp-for="Tinhtrang" class="form-control" readonly/>
                <span asp-validation-for="Tinhtrang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Canhotro" class="control-label">Cần hỗ trợ</label>
                <input asp-for="Canhotro" class="form-control" readonly />
                <span asp-validation-for="Canhotro" class="text-danger"></span>
            </div>
           
            
            <div class="form-group">
                <label asp-for="AnhNth" class="control-label">Hình ảnh</label>
                <br />
                <img src="@Url.Content("~/Content/images/noihotro/"+Model.AnhNth)" width="120" height="100" style=" border-radius:15px; border-style:outset " />
            </div>
            <div class="form-group">
                <label asp-for="TrangthaiNht" class="control-label">Cập nhật trạng thái</label>
                <select asp-for="TrangthaiNht" class="form-control">
                    <option value="Đã duyệt">Đã duyệt</option>
                    <option value="Chưa duyệt">Chưa duyệt</option>
                </select>
                <span asp-validation-for="TrangthaiNht" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Về danh sách</a>
</div>

