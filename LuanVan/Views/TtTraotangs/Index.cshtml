@model IEnumerable<LuanVan.Data.TtTraotang>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h1 {
        font-size: 24px;
        font-weight: bold;
        text-align: center;
    }

    .table {
        margin: 20px 0;
        padding: 0;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 10px;
            border: 1px solid #ccc;
        }

            .table th:nth-child(1),
            .table td:nth-child(1) {
                text-align: center;
            }

            .table th:nth-child(2),
            .table td:nth-child(2),
            .table th:nth-child(3),
            .table td:nth-child(3),
            .table th:nth-child(4),
            .table td:nth-child(4),
            .table th:nth-child(7),
            .table td:nth-child(7),
            .table th:nth-child(8),
            .table td:nth-child(8) {
                text-align: center;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

        .table img {
            display: block;
            margin: 0 auto;
            border-radius: 50%;
        }
</style>
<br />
<h1>Danh sách trao tặng của tổ chức</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Ảnh trao tặng
            </th>
            <th>
                Chiến dịch
            </th>
            <th>
                Nơi trao tặng
            </th>
            <th>
                Hiện vật
            </th>
            <th>
                Số lượng
            </th>
            <th>
                Trị giá
            </th>
            <th>
                Ngày tặng
            </th>

            <th>
                Người chịu trách nhiệm
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@Url.Content("~/Content/images/traotang/"+item.AnhTt)" width="120" height="100" style=" border-radius:15px; border-style:outset " />
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.MaCdNavigation.TenCd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ManoiNavigation.Diachi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaHvNavigation.TenHv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoluongTt) <a style="color:black"> @item.MaHvNavigation.Donvitinh</a>
                </td>
                <td>
                    @(item.MaHvNavigation.Gia * item.SoluongTt) <a style="color:black">VNĐ</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ngaytang)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.MaTvNavigation.TenTv)
                </td>



            </tr>
        }
    </tbody>
</table>
