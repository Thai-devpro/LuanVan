@model LuanVan.Data.Manhthuongquan

@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        background-color: #f8f9fc;
    }

    .card {
        border: none;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .form-control {
        border-radius: 25px;
        padding: 15px;
        font-size: 16px;
        color: #6c757d;
        background-color: #f1f3f5;
        border: none;
    }

    .btn-primary {
        border-radius: 25px;
        padding: 15px;
        font-size: 16px;
        font-weight: 600;
        background-color: #4e73df;
        border: none;
    }

        .btn-primary:hover {
            background-color: #2e59d9;
        }

    .text-gray-900 {
        color: #343a40;
    }

</style>
<div class="container" style="text-align:center; width:1300px; margin-left:10%;">
    <div class="row justify-content-center align-items-center min-vh-100" style="width:80%">
        <div class="col-md-6">
            <div class="card p-4">
                <div class="card-body">
                    <h4 class="text-danger">@ViewBag.Thongbao</h4>
                   
                        <h1 class="h4 text-gray-900 mb-4 text-center">Vui lòng nhập thông tin hoặc <a  asp-controller="User" asp-action="Login">Đăng nhập</a></h1>




                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="HotenMtq" class="control-label">Họ tên</label>
                            <input asp-for="HotenMtq" class="form-control" />
                            <span asp-validation-for="HotenMtq" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <label asp-for="GioitinhMtq" class="control-label">Giới tính</label>
                            <select asp-for="GioitinhMtq" class="form-control">
                                <option value="Nam">Nam</option>
                                <option value="Nữ">Nữ</option>
                            </select>
                            <span asp-validation-for="GioitinhMtq" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <label asp-for="DonviTochucMtq" class="control-label">Đơn vị/tổ chức</label>
                            <input asp-for="DonviTochucMtq" class="form-control" />
                            <span asp-validation-for="DonviTochucMtq" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <label asp-for="SdtMtq" class="control-label">Số điện thoại</label>
                            <input asp-for="SdtMtq" class="form-control" />
                            <span asp-validation-for="SdtMtq" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <label asp-for="DiachiMtq" class="control-label">Địa chỉ</label>
                            <input asp-for="DiachiMtq" class="form-control" />
                            <span asp-validation-for="DiachiMtq" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <label asp-for="EmailMtq" class="control-label">Email(Có thể trống)</label>
                            <input asp-for="EmailMtq" class="form-control" />
                            <span asp-validation-for="EmailMtq" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <label asp-for="MatkhauMtq" class="control-label">Nhập mật khẩu</label>
                            <input asp-for="MatkhauMtq" class="form-control" />
                            <span asp-validation-for="MatkhauMtq" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <input type="submit" value="Hoàn tắt" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

