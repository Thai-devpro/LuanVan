@model IEnumerable<LuanVan.Data.Chiendich>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .body {
        font-family: 'Roboto', sans-serif;
    }

    .box-posts {
        background: #EEE5DE;
        border: none;
        border-radius: 15px;
        box-shadow: 0px 0px 5px 5px #aaa;
        background: #f5f5f5;
        width: 100%;
        height: 350px;
        margin-bottom: 50px;
    }
   .btn{
        background-color: #2487ce;
        color:aliceblue;
   }
    .btn:hover {
        box-shadow: 0px 0px 5px 5px #789;
        background-color:aliceblue;
        color: #2487ce;
    }
    .box-posts:hover {
            box-shadow: 0px 0px 5px 5px #789;
        }
    .rowseach p {
        display: inline-block;
        margin-right: 10px;
    }
</style>
<br />
<br />
<br />
<table style="width: 100%; font-family: 'Roboto', sans-serif;">
    <tr style="width: 100%;">
        <td style="width: 50%;">
            <p style="font-size:30px; "><i class='bx bx-list-ul'></i> Chiến dịch đang diễn ra</p>
        </td>
        <td style="width: 50%;     text-align: right;">
            <div class="container-1">
                @using (Html.BeginForm())
                {
                    <div class="rowseach">
                        <form>
                            <p style="font-size:20px"><i class='bx bx-search-alt'></i>Tìm chiến dịch: </p>
                            <p >@Html.TextBox("SearchString", "", new { @class = "form-control" })</p>
                            <p><input type="submit" class="btn" value="Tìm kiếm" /></p>
                        </form>
                    </div>
                }
            </div>
        </td>
    </tr>
</table>
<br>
<div style="font-family: 'Roboto', sans-serif;">
    @foreach (var item in Model)
    {
        <table class="box-posts">
            <tr style="width: 100%;">


                <td style="width: 35%;">
                    <a href="@Url.Action("Details", "ChienDiches", new { id = item.MaCd })">

                        <img src="@Url.Content("~/Content/images/chiendich/"+item.AnhCd)" width="400" height="300" style="margin-left:10px; border-radius:15px; border-style:outset " />

                    </a>

                </td>
                <td style="width: 65%;">



                    <div style="height:15%">


                        <h2 style="margin-top:5px; align-content:center; margin-bottom:auto; text-align:center">
                            <a href="@Url.Action("Details", "ChienDiches", new { id = item.MaCd })">

                                @Html.DisplayFor(modelItem => item.TenCd)

                            </a>
                        </h2>
                    </div>


                    <div style="height:auto">

                        <a>@Html.DisplayFor(modelItem => item.NoidungCd)</a>

                    </div>

                    <hr>
                    <div style="height: 20%; color:#000">
                        <table>


                            <tr>


                                <td>


                                    <table>
                                        <tr>
                                            <td><i class="fas fa-barcode"></i></td>
                                            <td style="padding-left: 10px;">
                                                <b><i class='bx bx-calendar'></i> Ngày bắt đầu: </b>@Html.DisplayFor(modelItem => item.Ngaybatdau.Date)
                                            </td>
                                        </tr>


                                        <tr>


                                            <td>
                                                <i class="fas fa-calendar-alt"></i>
                                            </td>
                                            <td style="padding-left: 10px;">
                                                <b><i class='bx bx-calendar'></i> Ngày kết thúc: </b> @Html.DisplayFor(modelItem => item.Ngayketthuc.Date)
                                            </td>

                                        </tr>

                                    </table>
                                </td>

                            </tr>

                        </table>
                        <hr>

                    </div>
                    @if(item.Ngayketthuc.Date < DateTime.Now.Date)
                    {
                        <div style="height:15%; text-align:center; margin-bottom:auto; margin-top:30px ">
                            <h3 class="text-danger">Chiến dịch đã kết thúc</h3>
                        </div>
                    }else{
                    <div style="height:15%; text-align:center; margin-bottom:auto; margin-top:30px ">
                        <input type="button" class="btn" value="Quyên Góp" onclick="location.href='@Url.Action("Create", "TtQuyengopHienvats", new { id = item.MaCd })'" />
                    </div>
                    }
                </td>
            </tr>
        </table>


    }
</div>
